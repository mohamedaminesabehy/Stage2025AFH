<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!-- Configuration de l'encodage UTF-8 pour l'arabe -->
    <Parameter name="spring.http.encoding.charset" value="UTF-8" override="false"/>
    <Parameter name="spring.http.encoding.enabled" value="true" override="false"/>
    <Parameter name="spring.http.encoding.force" value="true" override="false"/>
    
    <!-- Configuration des filtres d'encodage -->
    <Filter className="org.apache.catalina.filters.SetCharacterEncodingFilter"
            encoding="UTF-8"
            forceEncoding="true"/>
            
    <!-- Configuration des paramÃ¨tres de session -->
    <Parameter name="sessionCookieName" value="JSESSIONID" override="false"/>
    <Parameter name="sessionCookiePath" value="/" override="false"/>
    <Parameter name="sessionCookieHttpOnly" value="true" override="false"/>
    
    <!-- Configuration des ressources -->
    <Resources cachingAllowed="true" cacheMaxSize="100000" />
</Context> 